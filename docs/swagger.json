{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "i9rfs HTTP (REST) API",
    "description": "A Remote File System API Server"
  },
  "servers": [
    {
      "url": "http://localhost:8000",
      "description": "Development server"
    }
  ],
  "paths": {
    "/api/auth/signup/request_new_account": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Signup user - Step 1",
        "description": "Submit email to request a new account",
        "responses": {
          "200": {
            "description": "Proceed to email verification",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": {
                      "type": "string"
                    }
                  }
                }
              }
            },
            "headers": {
              "Set-Cookie": {
                "description": "Signup session cookie",
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "A user with this email already exists",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "example@gmail.com"
                  }
                },
                "required": [
                  "email"
                ]
              }
            }
          }
        }
      }
    },
    "/api/auth/signup/verify_email": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Signup user - Step 2",
        "description": "Provide the 6-digit code sent to email",
        "parameters": [
          {
            "name": "Cookie",
            "in": "header",
            "description": "Signup session cookie",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Email verified",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": {
                      "type": "string"
                    }
                  }
                }
              }
            },
            "headers": {
              "Set-Cookie": {
                "description": "Signup session cookie",
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "(Incorrect verification code! | Verification code expired!) Check or Re-submit your email.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "code": {
                    "type": "string",
                    "pattern": "^[0-9]{6}$",
                    "example": "123456"
                  }
                },
                "required": [
                  "code"
                ]
              }
            }
          }
        }
      }
    },
    "/api/auth/signup/register_user": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Signup user - Step 3",
        "description": "Provide remaining user credentials",
        "parameters": [
          {
            "name": "Cookie",
            "in": "header",
            "description": "Signup session cookie",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Signup success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": {
                      "type": "string"
                    },
                    "user": {
                      "$ref": "#/components/schemas/ClientUserT"
                    }
                  }
                }
              }
            },
            "headers": {
              "Set-Cookie": {
                "description": "Auth user session cookie",
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Username not available",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "minLength": 3
                  },
                  "password": {
                    "type": "string",
                    "minLength": 8
                  }
                },
                "required": [
                  "username",
                  "password"
                ]
              }
            }
          }
        }
      }
    },
    "/api/auth/signin": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Signin user",
        "description": "Signin with email/username and password",
        "responses": {
          "200": {
            "description": "Signin success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": {
                      "type": "string"
                    },
                    "user": {
                      "$ref": "#/components/schemas/ClientUserT"
                    }
                  }
                }
              }
            },
            "headers": {
              "Set-Cookie": {
                "description": "Auth user session cookie",
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Incorrect email/username or password",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "emailOrUsername": {
                    "oneOf": [
                      {
                        "type": "string",
                        "format": "email"
                      },
                      {
                        "type": "string",
                        "minLength": 3
                      }
                    ]
                  },
                  "password": {
                    "type": "string",
                    "minLength": 8
                  }
                },
                "required": [
                  "emailOrUsername",
                  "password"
                ]
              }
            }
          }
        }
      }
    },
    "/api/app/uploads/authorize": {
      "post": {
        "tags": [
          "app"
        ],
        "summary": "Authorize file upload",
        "description": "Authorize file upload",
        "parameters": [
          {
            "name": "Cookie",
            "in": "header",
            "description": "Auth user session cookie",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Upload authorization success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "uploadUrl": {
                      "type": "string",
                      "format": "url"
                    },
                    "objectId": {
                      "type": "string",
                      "format": "uuid"
                    },
                    "cloudObjectName": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "406": {
            "description": "User does not have enough space",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "mimeType": {
                    "type": "string",
                    "format": "mime"
                  },
                  "size": {
                    "type": "number",
                    "minimum": 1
                  }
                },
                "required": [
                  "mimeType",
                  "size"
                ]
              }
            }
          }
        }
      }
    },
    "/api/app/signout": {
      "get": {
        "tags": [
          "app"
        ],
        "summary": "Signout user",
        "description": "Signout user",
        "parameters": [
          {
            "name": "Cookie",
            "in": "header",
            "description": "Auth user session cookie",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Signout success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            },
            "headers": {
              "Set-Cookie": {
                "description": "Cookie invalidation",
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ClientUserT": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "example": "clientUsername"
          }
        }
      }
    }
  }
}